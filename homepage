  <script>
    // nav popover
    const fab = document.getElementById('fab');
    const navpop = document.getElementById('navpop');
    fab.addEventListener('click', () => navpop.classList.toggle('open'));
    navpop.querySelectorAll('a').forEach(a => a.addEventListener('click', () => navpop.classList.remove('open')));
    document.addEventListener('click', (e) => {
      if (!navpop.contains(e.target) && !fab.contains(e.target)) navpop.classList.remove('open');
    });

    // Smooth scroll within the card container
    const root = document.getElementById('scrollRoot');
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const id = a.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(!el) return;
        e.preventDefault();
        root.scrollTo({ top: el.offsetTop, behavior:'smooth' });
      });
    });

    function fakeSubmit(e){
      e.preventDefault();
      document.getElementById('formHint').textContent =
        "✅ Sent (demo). For real email delivery, connect Formspree (free).";
      return false;
    }
  </script>
